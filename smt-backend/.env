# Configuration du serveur
PORT=5000
NODE_ENV=development

# Configuration MongoDB locale pour les tests
MONGODB_URI=mongodb://localhost:27017/smt_monja_faso

# Configuration JWT
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRES_IN=7d

# Configuration des uploads
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5MB

# Configuration email (optionnel pour les tests)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Configuration de sécurité
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# Configuration CORS - Origins autorisées (séparées par des virgules)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://yourdomain.com
